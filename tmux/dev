# create a new session named 'dev'
# call the initial window 'editor'
# then detach
tmux -2 new-session -s dev -n shell -d

# command line window
tmux send-keys -t dev 'clear && cd /home/mkrisher/riskio' C-m

# vim window
tmux new-window -n vim -t dev
tmux send-keys -t dev:2 'clear && cd /home/mkrisher/riskio' C-m
tmux send-keys -t dev:2 'vim' C-m

# test suite window
tmux new-window -n rspec -t dev
tmux send-keys -t dev:3 'clear && cd /home/mkrisher/riskio' C-m
tmux send-keys -t dev:3 'rspec' C-m
# maybe use Guard

# attach
tmux select-window -t dev:1
tmux -2 attach -t dev
